{% extends 'layout.html.twig' %}
{% from 'shared.html.twig' import render_news, render_comment %}

{% block content %}

{{ render_news(news) }}

{{ render_comment(news, comment, 0) }}

<form name="f">
    <input type="hidden" name="news_id" value="{{ news.id }}">
    <input type="hidden" name="comment_id" value="-1">
    <input type="hidden" name="parent_id" value="{{ comment.id }}">
    <textarea name="comment" cols="60" rows="10"></textarea><br>
    <input type="button" name="post_comment" value="Reply">
</form>

<div id="errormsg"></div>

<script>
    $(function() {
        $("input[name=post_comment]").click(post_comment);
    });
</script>

{% endblock %}
