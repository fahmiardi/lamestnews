{% extends 'layout.html.twig' %}
{% from 'shared.html.twig' import render_news %}

{% block content %}

<h2>Your saved news</h2>

<section id="newslist">
    {% for news in newslist %}
        {{ render_news(news) }}
    {% endfor %}

    {% if pagination is defined %}
        {% set nextpage = pagination.start + pagination.perpage %}
        {% if nextpage < pagination.count %}
        	<a href="/saved/{{ nextpage }}" class="more">[more]</a>
		{% endif %}
    {% endif %}
</section>

{% endblock %}
